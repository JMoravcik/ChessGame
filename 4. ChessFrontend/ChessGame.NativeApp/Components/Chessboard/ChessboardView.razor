<svg width="320" height="320" viewBox="0 0 320 320" xmlns="http://www.w3.org/2000/svg">
    <rect width="320" height="320" fill="#f0d9b5" />
    <g>
        @foreach (var field in GetFields())
        {
            <ChessField 
                Row="field.Row" 
                Column="field.Column" 
                PieceId="field.PieceId" 
                Clicked="OnFieldClick"
                Selectable="IsSelectable(field.notation)"
                Selected="IsSelected(field.notation)" />
        }
    </g>
</svg>
